{
  "version": 2,
  "builds": [
    {
      "src": "backend_python/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend_python/main.py"
    },
    {
      "src": "/health",
      "dest": "backend_python/main.py"
    },
    {
      "src": "/api/debug/(.*)",
      "dest": "backend_python/main.py"
    },
    {
      "src": "/api/database-info",
      "dest": "backend_python/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend_python/main.py"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-uri",
    "PORT": "5000"
  },
  "functions": {
    "backend_python/main.py": {
      "maxDuration": 30
    }
  }
}
